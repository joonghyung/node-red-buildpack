#!/usr/bin/env bash
# bin/detect <build-dir>

BP=$(dirname "$(dirname $0)")

find . | grep -E "flows_.+_cred.json$" | xargs -I{} mv {} flows_cred.json
find . | grep -E "flows_.+.json$" | xargs -I{} mv {} flows.json

if [ -f "$1/flows.json" ]; then
  echo "node.js "$(cat "$BP/VERSION")""
  exit 0
fi

exit 1
